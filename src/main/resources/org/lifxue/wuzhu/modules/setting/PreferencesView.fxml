<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane id="AnchorPane"
            prefHeight="700.0" prefWidth="850.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.lifxue.wuzhu.modules.setting.PreferencesViewController">
    <children>
        <SplitPane dividerPositions="0.5" layoutX="100.0" layoutY="45.0" orientation="VERTICAL" prefHeight="700.0"
                   prefWidth="850.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" layoutX="34.0" layoutY="37.0" spacing="20.0"
                              AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="30.0">
                            <children>
                                <Label text="界面主题：">
                                    <font>
                                        <Font name="System Bold" size="14.0"/>
                                    </font>
                                </Label>
                                <RadioButton fx:id="lightRadio" mnemonicParsing="false" text="淡色主题">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="modeGroup"/>
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton fx:id="nightRadio" mnemonicParsing="false" text="深色主题"
                                             toggleGroup="$modeGroup"/>
                            </children>
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" layoutX="50.0" layoutY="99.0" spacing="20.0"
                              AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
                            <children>
                                <Label text="数  据  库：">
                                    <font>
                                        <Font name="System Bold" size="14.0"/>
                                    </font>
                                </Label>
                                <CheckBox fx:id="autoPriceCheck" mnemonicParsing="false" text="启动时自动更新最新价格"/>
                                <CheckBox fx:id="autoCoinInfoCheck" mnemonicParsing="false"
                                          text="每月自动更新MarketCap货币信息"/>
                                <Button alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false"
                                        onAction="#handleInitDB" text="!初始化数据库"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" layoutX="44.0" layoutY="174.0" spacing="20.0"
                              AnchorPane.leftAnchor="40.0">
                            <children>
                                <Label prefWidth="85.0" text="品种比例图：">
                                    <font>
                                        <Font name="System Bold" size="14.0"/>
                                    </font>
                                </Label>
                                <CheckBox fx:id="notSmallCheck" mnemonicParsing="false"
                                          onAction="#handleNotSmallCheckOnAction" text="忽略小额品种"/>
                                <Spinner fx:id="numSpinner" prefHeight="26.0" prefWidth="90.0"/>
                            </children>
                        </HBox>
                        <Separator layoutX="20.0" layoutY="73.0" prefHeight="0.0" prefWidth="330.0"
                                   AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"/>
                        <Separator layoutX="20.0" layoutY="148.0" prefHeight="0.0" prefWidth="330.0"
                                   AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"/>
                        <Separator layoutX="30.0" layoutY="222.0" prefHeight="0.0" prefWidth="330.0"
                                   AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"/>
                        <Separator layoutX="20.0" layoutY="300.0" prefHeight="3.0" prefWidth="808.0"/>
                        <HBox alignment="CENTER_LEFT" layoutX="40.0" layoutY="252.0" prefHeight="23.0" prefWidth="653.0"
                              spacing="20.0" AnchorPane.leftAnchor="40.0">
                            <children>
                                <Label prefHeight="19.0" prefWidth="73.0" text="代理设置：">
                                    <font>
                                        <Font name="System Bold" size="14.0"/>
                                    </font>
                                </Label>
                                <CheckBox fx:id="proxyCheck" mnemonicParsing="false" onAction="#proxyCheckOnAction"
                                          text="使用代理"/>
                                <Label prefHeight="19.0" prefWidth="61.0" text="HOST："/>
                                <TextField fx:id="hostTextField" prefHeight="23.0" prefWidth="176.0"/>
                                <Label prefHeight="19.0" prefWidth="56.0" text="PORT："/>
                                <TextField fx:id="portTextField" prefHeight="23.0" prefWidth="99.0"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" layoutX="41.0" layoutY="337.0" prefHeight="40.0" prefWidth="726.0"
                              spacing="20.0">
                            <children>
                                <Label prefHeight="19.0" prefWidth="210.0" text="X-CMC_PRO_API_KEY："/>
                                <TextField fx:id="apikeyTextField" prefHeight="23.0" prefWidth="403.0"/>
                            </children>
                        </HBox>
                        <Label layoutX="37.0" layoutY="310.0" prefHeight="19.0" prefWidth="196.0"
                               text="coinmarketcap.com参数">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
                <AnchorPane maxHeight="40.0" minHeight="0.0" minWidth="0.0" prefHeight="40.0" prefWidth="848.0">
                    <children>
                        <HBox layoutX="508.0" layoutY="4.0" spacing="20.0" AnchorPane.bottomAnchor="5.0"
                              AnchorPane.rightAnchor="30.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#handleSave" prefHeight="30.0"
                                        prefWidth="80.0" text="保存"/>
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
